<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/id_index_gallery_item_image"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <!--选中时 透明的view-->
                <View
                    android:id="@+id/v_touming"
                    android:background="#88000000"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <!--右上角半透明的矩形框-->
                <ImageView
                    android:id="@+id/iv_square"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/image_selector_item_square"/>

                <!--右上角的对钩-->
                <ImageView
                    android:id="@+id/mis_default_select"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/mis_default_check_s"
                    android:visibility="gone"/>
            </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>